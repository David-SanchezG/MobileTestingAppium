<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="Android-Test-Suite" parallel="tests" data-provider-thread-count="1">

    <test name="Android-min" thread-count="1">
        <parameter name="platformName" value="Android"></parameter>
        <parameter name="version" value="7.0" />
        <classes>
            <class name="automation.FragmentedDevice1" />
        </classes>
    </test>

    <test name="Android-max" thread-count="1">
        <parameter name="platformName" value="Android"></parameter>
        <parameter name="version" value="9.0" />
        <classes>
            <class name="automation.FragmentedDevice2" />
        </classes>
    </test>

    <test name="IOS-min" thread-count="1">
        <parameter name="platformName" value="iOS"></parameter>
        <parameter name="version" value="11.4" />
        <classes>
            <class name="automation.FragmentedDevice3" />
        </classes>
    </test>

    <test name="iOS-max" thread-count="1">
        <parameter name="platformName" value="iOS"></parameter>
        <parameter name="version" value="12.2" />
        <classes>
            <class name="automation.FragmentedDevice4" />
        </classes>
    </test>

</suite>